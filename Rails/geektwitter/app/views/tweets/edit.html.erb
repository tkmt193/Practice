<h1>GeekTwitter</h1>
<h3>Tweet編集</h3>
<%= form_for @tweet do |f| %>
  <div class="field">

    <%= f.label :body %>
    <%= f.text_field :body, :size => 140 %>
    <%= f.label :map %>
    <%= f.text_field :map, :size => 140 %>
  </div>
  <%= f.submit "編集する" %>
<% end %>
<%= link_to "Tweet一覧に戻る", tweets_path %>
